@using PagedList;

@using PagedList.Mvc;

@model IPagedList<Products_HW1.Models.Products2>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@{
    ViewBag.Title = "ProductData";
}

<div><p>@ViewBag.msg</p></div>

<h2>Product Data</h2>

@using (Html.BeginForm("ProductData", "Home", FormMethod.Get))
{
    <b> Search Option: </b>

    @Html.RadioButton("option", "Name") <text>Name</text>
    @Html.RadioButton("option", "Description") <text>Description</text>
    @Html.RadioButton("option", "Price") <text>Price</text>

    @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />

}
<br />

<p>
    <button class="btn btn-primary" id="create_btn" onclick="create()">Create New Product</button>
</p>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th> Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <button class="btn btn-info" id="create_btn" onclick="read(@item.ID)">Read</button>
                <button class="btn btn-primary" id="create_btn" onclick="edit(@item.ID)">Edit</button>
                <button class="btn btn-danger" id="create_btn" onclick="del(@item.ID)">Delete</button>
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="ActionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <div class="modal-body" id="modalbody"></div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Data</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body"> Are you sure you want to delete this product?</div>
            <div class="modal-footer">
                <input type='button' class='btn btn-danger' id='delYes' value='Delete' />
                <input type="button" value="Cancel" data-dismiss="modal" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

<script>
    var create = function () {
        var createURL = "/Home/Create";
        $("#modalTitle").html("Add New Product");
        $("#modalbody").load(createURL, function () {
            $("#ActionModal").modal("show");
        });
    }

    var edit = function (id) {
        var editURL = "/Home/EditUpdate?id=" + id;
        $("#modalTitle").html("Edit/Update Product");
        $("#modalbody").load(editURL, function () {
            $("#ActionModal").modal("show");
        });
    }

    var del = function (id) {
        $("#DeleteModal").modal("show");
        $("#delYes").on("click", function () {
            var deleteURL = "/Home/delete?id=" + id;
            $.ajax
                ({
                    type: "post",
                    url: deleteURL,
                    success: function () {
                        $("#DeleteModal").modal("hide");
                        window.location.reload();
                    }
                });
        });
    }

    var read = function (id) {
        var readURL = "/Home/Read?id=" + id;
        $("#modalTitle").html("Read Product");
        $("#modalbody").load(readURL, function () {
            $("#ActionModal").modal("show");
        });
    }

</script>


@Html.PagedListPager(Model, pageNumber => Url.Action("ProductData", new{pageNumber,
                                          option = Request.QueryString["option"],
                                          search = Request.QueryString["search"]}))